model UserExample {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model Recipe {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  recipeNutrients RecipeNutrient[]
  MenuItem        MenuItem?
  servingSize     Int
  servingUnit     String
}

model RecipeNutrient {
  id         Int      @id @default(autoincrement())
  nutrient   Nutrient @relation(fields: [nutrientId], references: [id])
  nutrientId Int      @unique
  recipe     Recipe   @relation(fields: [recipeId], references: [id])
  recipeId   Int
  amount     Int
}

model Nutrient {
  id             Int             @id @default(autoincrement())
  name           String
  baseUnit       String
  recipeNutrient RecipeNutrient?
}

model Menu {
  id        Int        @id @default(autoincrement())
  date      DateTime
  menuItems MenuItem[]
}

model MenuItem {
  id           Int    @id @default(autoincrement())
  recipe       Recipe @relation(fields: [recipeId], references: [id])
  recipeId     Int    @unique
  menu         Menu   @relation(fields: [menuId], references: [id])
  menuId       Int
  servingValue Int
}
